<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date [%level] [%t]: %logger{15}: %message%n%xException{5}</pattern>
        </encoder>
    </appender>

    <logger name="controllers" level="DEBUG" />

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>